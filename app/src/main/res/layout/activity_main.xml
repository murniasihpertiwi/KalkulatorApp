    </LinearLayout>

    <!-- end 2 -->



    <!-- 3 button square dll -->


    <LinearLayout

        android:id="@+id/linearLayout10"

        android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"

        android:orientation="horizontal" >


        <Button

            android:id="@+id/button_squared_2"

            style="@style/ButtonText"

            android:layout_marginEnd="5dp"

            android:layout_weight="1"

            android:background="@drawable/btn_black"

            android:clickable="true"

            android:onClick="onClickListener_squared_2"

            android:padding="0dp"

            android:text="x²"

            android:textColor="@color/White" />


        <Button

            android:id="@+id/button_qube"

            style="@style/ButtonText"

            android:layout_marginRight="5dp"

            android:layout_weight="1"

            android:background="@drawable/btn_black"

            android:clickable="true"

            android:onClick="onClickListener_qube"

            android:padding="0dp"

            android:text="X³"

            android:textColor="@color/White" />


        <Button

            android:id="@+id/button_root"

            style="@style/ButtonText"

            android:layout_marginRight="5dp"

            android:layout_weight="1"

            android:background="@drawable/btn_black"

            android:clickable="true"

            android:onClick="onClickListener_root"

            android:padding="0dp"

            android:text="@string/square_root_symbol"

            android:textColor="@color/White" />


        <Button

            android:id="@+id/button_pi"

            style="@style/ButtonText"

            android:layout_marginRight="5dp"

            android:layout_weight="1"

            android:background="@drawable/btn_black"

            android:clickable="true"

            android:onClick="onClickListener_pi"

            android:padding="0dp"

            android:text="π"

            android:textColor="@color/White" />

    </LinearLayout>

    <!-- End 3 square -->




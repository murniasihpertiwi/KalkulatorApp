<?xml version="1.0" encoding="utf-8"?>
<!-- Mulai Backgroudn belakang -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"

    android:layout_height="fill_parent"

    android:layout_margin="10dp"

    android:layout_marginTop="50dp"

    android:background="@color/Gray"

    android:orientation="vertical" >


    <!-- 1 layar layout 2 -->


    <LinearLayout

        android:id="@+id/linearLayout2"

        android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:orientation="horizontal" >


        <!-- inputan user -->


        <EditText

            android:id="@+id/editText1"

            android:layout_width="fill_parent"

            android:layout_height="108dp"

            android:autofillHints=""

            android:clickable="false"

            android:cursorVisible="false"

            android:gravity="right|center_vertical"

            android:textSize="42sp" />

    </LinearLayout>

    <!-- end 1 -->



    <!-- mulai 2 BUTTON sin cos tan -->


    <LinearLayout

        android:id="@+id/linearLayout1"

        android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"

        android:orientation="horizontal" >


        <!-- tombol sin -->


        <Button

            android:id="@+id/button_sin"

            style="@style/ButtonText"

            android:layout_marginEnd="5dp"

            android:layout_weight="1"

            android:background="@drawable/btn_black"

            android:clickable="true"

            android:onClick="onClickListener_sin"

            android:padding="0dp"

            android:text="@string/sin"

            android:textColor="@color/White"
            android:focusable="true" />


        <!-- tombol cos -->


        <Button

            android:id="@+id/button_cos"

            style="@style/ButtonText"

            android:layout_marginEnd="5dp"

            android:layout_weight="1"

            android:background="@drawable/btn_black"

            android:clickable="true"

            android:onClick="onClickListener_cos"

            android:padding="0dp"

            android:text="@string/cos"

            android:textColor="@color/White"
            android:focusable="true" />


        <!-- tombol TAN -->


        <Button

            android:id="@+id/button_tan"

            style="@style/ButtonText"

            android:layout_marginEnd="5dp"

            android:layout_weight="1"

            android:background="@drawable/btn_black"

            android:clickable="true"

            android:onClick="onClickListener_tan"

            android:padding="0dp"

            android:text="@string/tan"

            android:textColor="@color/White"
            android:focusable="true" />


        <!-- tombol hapus Backshape -->

        <Button

            android:id="@+id/button_del"

            style="@style/ButtonText"

            android:layout_marginEnd="5dp"

            android:layout_weight="1"

            android:background="@drawable/btn_black"

            android:clickable="true"

            android:onClick="onClickListener_del"

            android:padding="0dp"

            android:text="⇐"

            android:textColor="@color/Red"

            android:textSize="28sp"

            android:textStyle="bold"

            android:focusable="true" />

    </LinearLayout>

    <!-- end 2 button -->



    <!-- layout 3 button dec,bin,hex -->

    <LinearLayout

        android:id="@+id/linearLayout11"

        android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"

        android:orientation="horizontal" >


        <Button

            android:id="@+id/button_bin"

            style="@style/ButtonText"

            android:layout_marginEnd="5dp"

            android:layout_weight="1"

            android:background="@drawable/btn_black"

